class Solution {
public:
    double findMaxAverage(vector<int>& nums, int k) {
        double sum=0;
        double maxsum=0;
        for(int i=0;i<k;i++){
            sum=sum+nums[i];
            maxsum=sum;
        }
        for(int i=k;i<nums.size();i++){
            sum=sum+nums[i];
            sum=sum-nums[i-k];
            if(sum>maxsum){
                maxsum=sum;
            }
        }
        double average = maxsum/k;
        return average;
    }
};
